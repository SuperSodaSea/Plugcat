package build

import mill._
import scalalib._

trait Module extends ScalaModule {
    def scalaVersion = "2.13.16"
    def scalacOptions = super.scalacOptions() ++ Seq(
        "-unchecked",
        "-deprecation",
        "-language:reflectiveCalls",
        "-feature",
        "-Xcheckinit",
        "-Xfatal-warnings",
        "-Ywarn-dead-code",
        "-Ywarn-unused",
        "-Ymacro-annotations",
    )
}
